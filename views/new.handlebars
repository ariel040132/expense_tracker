<h1 class="mb-1 restaurant-show-title text-center mt-3 mb-5">請輸入你的支出</h1>

<div class="container col-md-4 m-auto">
  <form action="/expense/new" method="POST">
    <div class="mb-4 input-group flex-nowrap">
      <label for="event" class="form-label me-5 fs-4">名稱<span
          class="text-danger"
        >*</span>：</label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="請輸入一筆支出"
        name="name"
        required
      />
    </div>
    <div class="mb-4 input-group flex-nowrap">
      <label for="category" class="form-label me-5 fs-4">分類<span
          class="text-danger"
        >*</span>：</label>

      <select
        class="form-select col"
        id="categoryId"
        name="categoryId"
        required
      >
        <option selected disabled hidden>請擇一分類</option>
         {{>category}}
      </select>
    </div>
    <div class="mb-4 input-group flex-nowrap">
      <label for="date" class="form-label me-5 fs-4">日期<span
          class="text-danger"
        >*</span>：</label>
      <input
        type="date"
        class="form-control"
        id="date"
        placeholder="2023/5/1"
        name="date"
        required
      />
    </div>
    <div class="mb-5 input-group flex-nowrap">
      <label for="money" class="form-label me-5 fs-4">支出<span
          class="text-danger"
        >*</span>：</label>
      <input
        type="number"
        class="form-control"
        id="amount"
        name="amount"
        required
      />
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        新增帳目
      </button>
    </div>
  </form>
</div>